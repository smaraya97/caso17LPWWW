    <div class="accordion" id="accordionExample">
      {{#each lote}}
      <div class="accordion-item">
        <h2 class="accordion-header" id="heading{{this.codigo}}">
          <button class="accordion-button" type="button" data-bs-toggle="collapse"
            data-bs-target="#collapse{{this.codigo}}" aria-expanded="true" aria-controls="collapse{{this.codigo}}">
            
              <div class="col-10">
                <strong>{{this.nombre}} - {{gramos}}mg</strong>
              </div>
              <div class="col-1 text-danger">
                Fecha de vencimiento:  {{this.fechaVencimiento}}
              </div>
            
          </button>
        </h2>
        <div id="collapse{{this.codigo}}" class="accordion-collapse collapse" aria-labelledby="heading{{this.codigo}}"
          data-bs-parent="#accordionExample">
          <div class="accordion-body">
            <div> Numero de lote: {{this.codigo}}</div>
            <div> SKU: {{this.sku}} </div>
            <div> Estado: vencido </div>
          </div>
        </div>
